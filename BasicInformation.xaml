<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.BasicInformation"
             Title="Basic Information">

        <Grid RowDefinitions="50,10,50,10,50,10,50" ColumnDefinitions="*,100,300,*" Margin="0,100,0,0">
            <Label Text="FirstName" Grid.Column="1" Grid.Row="0" VerticalOptions="Center">
            </Label>
            <Entry Placeholder="Enter Your FirstName" Grid.Column="2" Grid.Row="0" Text="{Binding FirstName}"></Entry>

        <Label Text="LastName" Grid.Column="1" Grid.Row="2" VerticalOptions="Center">
        </Label>
        <Entry Placeholder="Enter Your LastName" Grid.Column="2" Grid.Row="2" Text="{Binding LastName}"></Entry>

        <Label Text="FatherName" Grid.Column="1" Grid.Row="4" VerticalOptions="Center">
        </Label>
        <Entry Placeholder="Enter Your FatherName" Grid.Column="2" Grid.Row="4" Text="{Binding FatherName}"></Entry>
        <Button Text="Next" Grid.Row="6" Grid.Column="2" Clicked="Button_Clicked" ></Button>
    </Grid>

</ContentPage>